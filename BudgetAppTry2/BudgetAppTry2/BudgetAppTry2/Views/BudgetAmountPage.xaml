<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetAppTry2.Views.BudgetAmountPage"
             xmlns:model="clr-namespace:BudgetAppTry2.Models">
    

    <ContentPage.Content>
        <StackLayout>
            <Entry  x:Name="YourBudgetAmount"
                          HeightRequest="100"
                          Placeholder="Enter your buget amount"
                   FontSize="Body"  VerticalOptions="End"  FontAttributes="Bold" 
                          PlaceholderColor="Coral"/>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="Save"
                        Text="Save"
                        BackgroundColor="DarkMagenta"
                        Clicked="Save_Clicked"/>
                <Button Grid.Column="1" x:Name="Delete"
                        Text="Delete" Clicked="Delete_Clicked"
                        BackgroundColor="DarkOrange"/>
            </Grid>
        </StackLayout>
        
    </ContentPage.Content>
   
</ContentPage>