<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeToDo.Views.Todo">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="ToDoText"
                    Placeholder="Enter your Text here"
                    HeightRequest="100"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button 
                        Text="Save"
                        Clicked="add_Clicked"/>
                <Button 
                        Text="delete"
                        Clicked="Delete_Clicked"
                        Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>